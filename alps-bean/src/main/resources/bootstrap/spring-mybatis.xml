    <context:property-placeholder location="classpath*:config/*.properties, file:${config.dir}/config/mybatis.properties"/>

    <bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="druidDataSource" />
        <property name="configLocation" value="${mybatis.configLocation}"/>
        <property name="mapperLocations">
            <array>
                <value>${mybatis.mapperLocations.module}</value>
                <value>${mybatis.mapperLocations.local}</value>
            </array>
        </property>
    </bean>

    <bean id="mapperScannerConfigurer" class="org.mybatis.spring.mapper.MapperScannerConfigurer" >
        <property name="sqlSessionFactoryBeanName" value="sqlSessionFactory"></property>
        <property name="basePackage" value="${mybatis.basePackage}" />
        <property name="processPropertyPlaceHolders" value="true" />
    </bean>

